<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".Home">

        <!-- Container Principal -->
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@color/verde_blue">

                <!-- Imagem do Ícone -->
                <ImageView
                        android:id="@+id/ic_lateral"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:src="@drawable/ic_menu"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_margin="8dp" />

                <!-- Texto de Boas Vindas -->
                <TextView
                        android:id="@+id/text_welcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Olá, Informe-se,\nprevina-se, cuide-se!"
                        android:textColor="@android:color/white"
                        android:textSize="28sp"
                        android:gravity="left"
                        app:layout_constraintTop_toBottomOf="@id/ic_lateral"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="46dp"
                        android:layout_marginStart="30dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Instruções -->
        <TextView
                android:id="@+id/text_instrucao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Toque na categoria abaixo para saber mais sobre sintomas, prevenção e tratamentos."
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:gravity="left"
                android:layout_marginTop="46dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp" />

        <!-- Imagem da MPOX -->
        <ImageView
                android:id="@+id/mpox"
                android:layout_width="210dp"
                android:layout_height="211dp"
                app:srcCompat="@drawable/mpox"
                android:contentDescription="Garoto com Mpox"
                android:layout_gravity="center"
                android:layout_marginTop="56dp" />

        <!-- Container Fixo na Parte Inferior -->
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/verde_blue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="82dp">

                <!-- Ícone de Perfil -->
                <ImageView
                        android:id="@+id/ic_profile"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_profile"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="26dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintHorizontal_bias="0.2"/>

                <ImageView
                        android:id="@+id/ic_home"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_home"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="179dp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintHorizontal_bias="0.5"/>

                <ImageView
                        android:id="@+id/ic_settings"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/config"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="86dp"
                        android:layout_marginTop="2dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.8"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>
