<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Intro">

    <!-- Fundo da Intro -->
    <ImageView
            android:id="@+id/fundo_intro"
            android:layout_width="502dp"
            android:layout_height="466dp"
            app:srcCompat="@drawable/fundo_intro"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="-100dp" />

    <!-- Título da Intro -->
    <ImageView
            android:id="@+id/imageView3"
            android:layout_width="367dp"
            android:layout_height="105dp"
            app:srcCompat="@drawable/title"
            app:layout_constraintTop_toBottomOf="@id/fundo_intro"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.3" />

    <!-- Imagem Médicos -->
    <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/twomedicos_removebg_preview"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <!-- Texto Intro -->
    <TextView
            android:id="@+id/textView"
            android:layout_width="359dp"
            android:layout_height="47dp"
            android:text="Transforme sua saúde com conhecimento\n e prevenção ao seu alcance!"
            android:textSize="17dp"
            android:fontFamily="sans-serif-condensed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="484dp"
            android:layout_marginEnd="24dp" />

    <!-- Botão e Imagem Sobreposta -->
    <Button
            android:id="@+id/btn_intro"
            android:layout_width="197dp"
            android:layout_height="58dp"
            android:text=""
            android:contentDescription="Um botão para abrir a aba Home"
            android:backgroundTint="@android:color/white"
            app:layout_constraintTop_toBottomOf="@id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp"
            tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
            android:id="@+id/imageView5"
            android:layout_width="348dp"
            android:layout_height="61dp"
            app:srcCompat="@drawable/btn_intro"
            app:layout_constraintTop_toBottomOf="@id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
