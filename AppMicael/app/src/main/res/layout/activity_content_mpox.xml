<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <!-- Cabeçalho (Header) -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/material_dynamic_primary50">

        <!-- Texto de Boas Vindas -->
        <TextView
                android:id="@+id/text_mpox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MPOX"
                android:textColor="@android:color/white"
                android:textSize="28sp"
                android:gravity="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Imagem de Retornar -->
        <ImageView
                android:id="@+id/retornar"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:contentDescription="Imagem de seta retornar"
                app:srcCompat="@drawable/setablue"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Container de Conteúdo -->
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white">


        <!-- Botão Próximo -->
        <Button
                android:id="@+id/btn_proximo"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:textSize="20dp"
                android:text="NEXT"
                android:backgroundTint="@color/material_dynamic_primary50"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="42dp"/>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/man" android:id="@+id/imageMpox"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="parent"/>


        <TextView
                android:id="@+id/what"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="O QUE É?"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/imageMpox"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="28dp"
        />
        <TextView
                android:id="@+id/textView3"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:text="A mpox é uma doença causada pelo mpox vírus (MPXV), do
                gênero Orthopoxvirus e família Poxviridae.Trata-se de uma doença zoonótica
                 viral,em que sua transmissão para humanos pode ocorrer por meio do contato com:
                \n\n- Pessoa infectada pelo mpox vírus
                \n- Materiais contaminados com o vírus
                \n- Animais silvestres (roedores) infectados"
                android:textSize="16dp"
                android:lineSpacingExtra="4dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@android:color/black"
                tools:layout_editor_absoluteY="377dp"
                tools:layout_editor_absoluteX="37dp"
                app:layout_constraintTop_toBottomOf="@id/what"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="30dp"
                android:justificationMode="inter_word"
                />


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
