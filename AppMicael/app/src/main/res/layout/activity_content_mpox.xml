<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="1dp"
        tools:layout_editor_absoluteX="1dp"
        android:fillViewport="true">


        <androidx.constraintlayout.widget.ConstraintLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content">
            <ImageView
                    android:layout_width="124dp"
                    android:layout_height="120dp" app:srcCompat="@drawable/WomanDoctor"
                    android:id="@+id/imageView6" tools:layout_editor_absoluteY="639dp"
                    tools:layout_editor_absoluteX="29dp"/>
            <TextView
                    android:text="MPOX"
                    android:layout_width="wrap_content"
                    android:textSize="25sp"
                    android:textColor="@color/blue"
                    android:fontFamily="sans-serif"
                    android:textStyle="italic"
                    android:textFontWeight="700"
                    android:layout_height="wrap_content" android:id="@+id/textView1"
                    tools:layout_editor_absoluteY="230dp"
                    tools:layout_editor_absoluteX="29dp"/>
            <ImageView
                    android:layout_width="114dp"
                    android:layout_height="106dp" app:srcCompat="@drawable/image__3_"
                    android:id="@+id/imageView10" tools:layout_editor_absoluteY="649dp"
                    tools:layout_editor_absoluteX="258dp"/>
            <ImageView
                    android:layout_width="100dp"
                    android:layout_height="109dp" app:srcCompat="@drawable/mpoxMan"
                    android:id="@+id/imageView12" tools:layout_editor_absoluteY="418dp"
                    tools:layout_editor_absoluteX="155dp"/>
            <ImageView
                    android:layout_width="72dp"
                    android:layout_height="57dp" app:srcCompat="@drawable/setaBlue"
                    android:id="@+id/imageView13" tools:layout_editor_absoluteY="16dp"
                    tools:layout_editor_absoluteX="16dp"/>
            <ImageView
                    android:layout_width="172dp"
                    android:layout_height="147dp" app:srcCompat="@drawable/mpox" android:id="@+id/imageView14"
                    tools:layout_editor_absoluteY="73dp" tools:layout_editor_absoluteX="119dp"/>
            <TextView
                    android:text="A mpox é uma doença causada pelo mpox vírus (MPXV), do gênero Orthopoxvirus e família Poxviridae. Trata-se de uma doença zoonótica viral,
                            em que sua transmissão para humanos pode ocorrer por meio do contato com:\n
                            \n
                            - Pessoa infectada pelo mpox vírus\n
                            - Materiais contaminados com o vírus\n
                            - Animais silvestres (roedores) infectados"
                    android:textSize="12dp"
                    android:justificationMode="inter_word"
                    android:layout_width="352dp"
                    android:layout_height="147dp" android:id="@+id/textView2"
                    tools:layout_editor_absoluteY="271dp" tools:layout_editor_absoluteX="29dp"/>

            <TextView
                    android:text="Sinais e Sintomas"
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/blue"
                    android:fontFamily="sans-serif"
                    android:textStyle="italic"
                    android:textFontWeight="700"
                    android:layout_height="wrap_content" android:id="@+id/textView3"
                    tools:layout_editor_absoluteY="611dp"
                    tools:layout_editor_absoluteX="16dp"/>
            <TextView
                    android:text="Diagnóstico"
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/blue"
                    android:fontFamily="sans-serif"
                    android:textStyle="italic"
                    android:textFontWeight="700"
                    android:layout_height="wrap_content" android:id="@+id/textView4"
                    tools:layout_editor_absoluteY="408dp"
                    tools:layout_editor_absoluteX="153dp"/>

            <TextView
                    android:text="Prevenção"
                    android:layout_width="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/blue"
                    android:fontFamily="sans-serif"
                    android:textStyle="italic"
                    android:textFontWeight="700"
                    android:layout_height="wrap_content" android:id="@+id/textView5"
                    tools:layout_editor_absoluteY="612dp"
                    tools:layout_editor_absoluteX="266dp"/>
            <Button
                    android:layout_width="63dp"
                    android:layout_height="27dp" android:id="@+id/btn_yellow" tools:layout_editor_absoluteY="518dp"
                    tools:layout_editor_absoluteX="175dp" android:backgroundTint="#FFFFFF"/>
            <ImageView
                    android:layout_width="113dp"
                    android:layout_height="32dp" app:srcCompat="@drawable/btnOrange"
                    android:id="@+id/imageView15" tools:layout_editor_absoluteY="509dp"
                    tools:layout_editor_absoluteX="153dp"/>
            <ImageView
                    android:layout_width="120dp"
                    android:layout_height="38dp" app:srcCompat="@drawable/btnGreen"
                    android:id="@+id/imageView16" tools:layout_editor_absoluteX="29dp"
                    tools:layout_editor_absoluteY="737dp"/>
            <ImageView
                    android:layout_width="142dp"
                    android:layout_height="40dp" app:srcCompat="@drawable/btnRed" android:id="@+id/imageView17"
                    tools:layout_editor_absoluteY="764dp" tools:layout_editor_absoluteX="255dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>



</ScrollView>
